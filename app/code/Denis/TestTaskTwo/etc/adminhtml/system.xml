<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="pricesgroup" translate="label" sortOrder="10">
            <label>Prices Group</label>
        </tab>
        <section id="pr_gr" translate="label" sortOrder="130"
            showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Prices Group</label>
            <tab>pricesgroup</tab>
            <resource>Denis_TestTaskOne::mss_config</resource>
            <group id="general" translate="label" type="text"
                sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Prices Group</label>
                <field id="module_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="baseprice_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Base Price show:</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="finalprice_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Final Price show</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="specialprice_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Special Price show</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="tierprice_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Tier Price show</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="catalogruleprice_enable" translate="label" type="select"
                    sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Catalog Rule Price show</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
